<div class="container-fluid">
  <div class="container sale-content-container">
    <% unless @sale.shipped %>
      <h4 class="sale-main-header-text"><%= @sale.ad_title %> Sale</h4>
    <% else %>
      <h4 class="sale-main-header-text shipped-title-text"><%= @sale.ad_title %> has shipped</h4>
    <% end %>
        <div class="card sale-card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h6 class="card-title sale-card-title">Buyer Information</h6>
                <p class="card-text"><%= @sale.buyer_first_name %> <%= @sale.buyer_last_name %></p>
                <p class="card-text"><%= @sale.shipping_street %> <%= @sale.shipping_city %></p>
                <p class="card-text"><%= @sale.shipping_state %> <%= @sale.shipping_zipcode %></p>
              </div>
              <div class="col-md-6">
                <h6 class="card-title sale-card-title">Sale Information</h6>
                <p class="card-text">Order placed on <%= @sale.created_at.strftime("%B %d, %Y") %> at <%= @sale.created_at.strftime("%r")%></p>
                <div class="row sale-block-container">

                  <div class="col-md-4">
                      <span class="sale-show-card-block">
                        Quantity
                        <hr>
                        <%= @sale.item_quantity %>
                      </span>
                  </div>
                  <div class="col-md-4">
                      <span class="sale-show-card-block">
                        Price per Unit
                        <hr>
                        <%= @sale.price %>
                      </span>
                  </div>
                  <div class="col-md-4">
                      <span class="sale-show-card-block">
                        Total
                        <hr>
                        <%= @sale.total_amount %>
                      </span>
                  </div>

                </div>
              </div>
            </div>
            <br>
            <br>
            <% unless @sale.shipped %>
              <%= link_to "Ship Order", ship_order_sale_path(@sale.id), class: "btn btn-success float-right" %>
            <% else %>
              <%= link_to "Delete Sale", @sale, method: :delete, data: { confirm: "Are you sure you want to delete this sale?" }, class: "btn btn-danger float-right" %>
            <% end %>
          </div>
        </div>
        <br>
        <br>
  </div>
</div>
