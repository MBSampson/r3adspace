<div class="auth-container">
  <h2>Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-5">
        <!-- EDIT PROFILE IMAGE GOES HERE -->
        <% if @user.image %>
          <div class="user-form-image">
            <%= image_tag @user.image %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.text_field :image, id: :user_image, class: "form-text" %>
          </div>
        <% else  %>
        <div class="test">
          <div class="placeholder-form-image">

          </div>
          <div class="form-group">
            <%= f.label :image %><br>
            <%= f.text_field :image, id: :user_image, class: "form-text" %>
          </div>
        </div>
        <% end %>
      </div>

      <div class="col-md-7">
        <div class="form-group">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, id: :user_first_name, class: "form-text" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name, id: :user_last_name, class: "form-text" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <br>

        <div class="new-password-content">
          <div class="form-group">
            <%= f.label :password, "New Password" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm New Password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :current_password, "Current Password" %><br />
          <%= f.password_field :current_password, autocomplete: "off", placeholder: "Leave blank unless you are changing your password" %>
        </div>

        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary profile-settings-btn"%>
        </div>

        <%= link_to "Cancel", '/', class: "btn btn-light profile-settings-btn" %>
      </div>
    </div>
  <% end %>
</div>
