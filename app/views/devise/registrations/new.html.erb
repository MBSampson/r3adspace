<div class="auth-container">
  <h2>Sign up</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="row">
        <div class="col-md-7">
          <div class="form-group">
            <%= f.label :first_name %><br>
            <%= f.text_field :first_name, id: :user_first_name, class: "form-text" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name %><br>
            <%= f.text_field :last_name, id: :user_last_name, class: "form-text" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-text" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-text" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-text" %>
          </div>

          <br>
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
        </div>
      </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
