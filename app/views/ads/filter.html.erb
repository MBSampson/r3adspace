<%= render 'home_nav' %>

<div class="container-fluid">
  <div class="container ad-home-container">
    <div class="ad-content">
      <% @ads.each do |ad| %>
      <div class="ad-item">
        <%= link_to image_tag(ad.image), ad,  class: "ad-image" %>
        <div class="ad-item-content">
          <%= link_to ad.title, ad, class: "ad-title" %>
          <p class="ad-category"><%= ad.category.name %></p>
          <p><%= number_to_currency(ad.price) %></p>
          <p><%= ad.description %></p>
        </div>
      </div>
      <% end %>
    </div>
    <div class="filter-content">
      <% @categories.each do |category| %>
        <%= link_to category.name, ads_filter_path(:category => category.id), class: "filter-item" %>
      <% end %>
    </div>
  </div>
</div>
