<% @ads.each do |ad| %>
    <div class="row ad-item">
      <div class="col-md-3">
        <div class="ad-photo-container">
          <%= link_to image_tag(ad.photo), ad, class: "img-fluid" %>
        </div>
      </div>
      <div class="col-md-9">
        <p class="ad-category-text"><%= ad.category.name %></p>
        <% if ad.sold %>
          <%= link_to ad.title, ad, class: "ad-title-text ad-sold-text" %>
          <br>
          <br>
          <p class="ad-sold-text">[ITEM SOLD - AD UNLISTED]</p>
        <% else %>
          <%= link_to ad.title, ad, class: "ad-title-text text-dark" %>
        <% end %>
        <p class="ad-price-text"><%= number_to_currency(ad.price) %></p>
        <p><%= simple_format(ad.description) %></p>
        <% if !ad.sold %>
          <%= show_ad_published_status(@page, ad) %>
        <% end %>
        <%= show_buy_button(ad) %>
        <p class="ad-author-text">Posted By: <%= ad.user.first_name + " " + ad.user.last_name %></p>
      </div>
    </div>
<% end %>
