<div class="filter-content">
  <button onclick="showFilterContainer()" class="btn btn-light btn-dark btn-block" id="show-filter-btn">Show Filters</button>
  <div id="filter-items-container">
    <% if @page != 'poster_filter' %>
      <%= link_to 'All', '#', class: "filter-item" %>
      <% @categories.each do |category| %>
        <%= link_to category.name, ads_category_filter_path(:category_id => category.id), class: "filter-item" %>
      <% end %>
    <% else %>
      <%= link_to 'All', ads_poster_filter_path, class: "filter-item" %>
      <% @categories.each do |category| %>
        <%= link_to category.name, ads_poster_filter_path(:category_id => category.id, :poster => @user.id), class: "filter-item"  %>
      <% end %>
    <% end %>
  </div>
</div>
