<div class="container-fluid">
  <div class="container ad-content-container">
    <h4 class="ad-main-header-text"><span class="capitalize"><%= @category.name %></span> Category</h4>
    <div class="row">
      <% if @ads.count != 0 %>
        <div class="col-lg-2">
          <%= render 'show_filter_content' %>
        </div>
        <div class="col-lg-10">
          <%= render 'show_ad_content' %>
        </div>
      <% else %>
        <div class="no-content-container bg-light">
          <h4>There are no ads in the <%= @category.name %> category.</h4>
          <%= link_to 'Return to main page', ads_path, class: "text-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
