<%= form_with(model: ad, local: true) do |form| %>
  <% if ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :ad_title, class: "form-text" %>
      </div>

      <div class="form-group">
        <%= form.label :price %>
        <%= form.text_field :price, id: :ad_price, class: "form-text" %>
      </div>

      <div class="form-group">
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, id: :ad_description, class: "form-text" %>
        </div>
      </div>
    </div>

    <div class="col-md-5">
      <% if ad.image %>
        <div class="ad-form-image">
          <%= image_tag ad.image %>
        </div>
        <div class="form-group">
          <%= form.text_field :image, id: :ad_image, class: "form-text", style: "visibility: visible;" %>
        </div>
      <% else %>
        <div class="placeholder-form-image">
          <button type="button" name="button" onclick="displayImageField()" class="btn btn-primary" id="ad-image-btn">Add Image</button>
        </div>
        <div class="form-group">
          <%= form.text_field :image, id: :ad_image, class: "form-text" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :category_id %><br>
        <%= form.collection_select :category_id, Category.order(:name), :id, :name, include_blank: false %>
      </div>
    </div>

    <div class="col-md-3">

    </div>
  </div>
  <br>

  <p style="float: right;"><%= form_button_helper(@form_type) %></p>
<% end %>
