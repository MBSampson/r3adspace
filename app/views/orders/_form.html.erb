<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :buyer_name %>
    <%= form.text_field :buyer_name, id: :order_buyer_name %>
  </div>

  <div class="form-group">
    <%= form.label :seller_name %>
    <%= form.text_field :seller_name, id: :order_seller_name %>
  </div>

  <div class="form-group">
    <%= form.label :payment_confirmed %>
    <%= form.check_box :payment_confirmed, id: :order_payment_confirmed %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, id: :order_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, id: :order_state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :zipcode %>
    <%= form.number_field :zipcode, id: :order_zipcode, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, id: :order_city, class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to 'Back', '/', class: "btn btn-primary" %>
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
